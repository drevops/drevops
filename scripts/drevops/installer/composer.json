{
    "name": "drevops/drevops-installer",
    "description": "DrevOps installer",
    "license": "GPL-2.0-or-later",
    "require": {
        "php": ">=8"
    },
    "require-dev": {
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7",
        "drupal/coder": "^8.2.12",
        "phpunit/phpunit": "^8.5",
        "symfony/filesystem": "^4.4"
    },
    "autoload-dev": {
        "classmap": [
            "tests/unit"
        ]
    },
    "config": {
        "platform": {
            "php": "8.1.0"
        },
        "process-timeout": 0,
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "lint": "phpcs -s --standard=Drupal install.php tests",
        "test": "phpunit tests"
    }
}
