{
    "name": "drevops/drevops-installer-tests",
    "description": "DrevOps installer tests.",
    "license": "GPL-2.0-or-later",
    "require-dev": {
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7",
        "drupal/coder": "^8.2.12",
        "phpunit/phpunit": "^8.5",
        "symfony/filesystem": "^4.4"
    },
    "autoload-dev": {
        "classmap": [
            "unit"
        ]
    },
    "config": {
        "platform": {
            "php": "7.2"
        },
        "process-timeout": 0,
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
