{
    "name": "myorg/mysite",
    "description": "Drupal 7 site for MYSITE",
    "license": "GPL-2.0-or-later",
    "require": {
        "composer/installers": "^1.2.0",
        "cweagans/composer-patches": "^1.6.0",
        "drupal-composer/preserve-paths": "^0.1.4",
        "drupal/drupal": "^7.58",
        "drupal/drupal_helpers": "^1.2",
        "drupal/wysiwyg": "^2.5",
        "drupal/xautoload": "^4.5",
        "library/ckeditor": "^4.9.2",
        "webflo/drupal-finder": "^1.0"
    },
    "require-dev": {
        "behat/behat": "^3.4",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.4.4",
        "dmore/behat-chrome-extension": "^1.1",
        "drupal/coder": "^8.2.12",
        "drupal/console": "^1.0",
        "drupal/drupal-extension": "^v3.4",
        "drush/drush": "^8.1",
        "integratedexperts/behat-format-progress-fail": "^0.2",
        "integratedexperts/behat-screenshot": "^0.7",
        "integratedexperts/robo-git-artefact": "^0.2.4",
        "jakub-onderka/php-parallel-lint": "^1.0",
        "phpunit/phpunit": "^5.7.19",
        "symfony/filesystem": "^3.2.8",
        "wimg/php-compatibility": "^8.1"
    },
    "autoload": {
        "classmap": [
            "scripts/composer/"
        ]
    },
    "autoload-dev": {
        "classmap": [
            "tests/unit/"
        ]
    },
    "config": {
        "platform": {
            "php": "7.1"
        },
        "process-timeout": 0,
        "sort-packages": true
    },
    "conflict": {
        "drupal/core": "8.*"
    },
    "repositories": {
        "drupal": {
            "type": "composer",
            "url": "https://packages.drupal.org/7"
        },
        "library/ckeditor": {
            "type": "package",
            "package": {
                "name": "library/ckeditor",
                "version": "4.9.2",
                "type": "drupal-library",
                "dist": {
                    "url": "https://download.cksource.com/CKEditor/CKEditor/CKEditor%204.9.2/ckeditor_4.9.2_standard.zip",
                    "type": "zip"
                }
            }
        }
    },
    "scripts": {
        "app:login": "@composer docker:cli -- drush uli -r /app/docroot -l http://mysite.docker.amazee.io/ | xargs open",
        "app:cs": [
            "parallel-lint --exclude vendor --exclude node_modules -e php,module,theme,install tests docroot/profiles/mysite_profile docroot/sites/all/modules/custom docroot/sites/all/themes/custom docroot/sites/default/settings.php",
            "phpcs",
            "npm run lint"
        ],
        "app:test": "behat --format=progress_fail --colors",
        "app:build": [
            "@docker:start",
            "@composer install -n --ansi --prefer-dist",
            "@app:build-fed",
            "@app:import-db"
        ],
        "app:rebuild": [
            "@app:cleanup",
            "@app:build"
        ],
        "app:rebuild-full": [
            "@app:cleanup-full",
            "@app:build"
        ],
        "app:import-db": [
            "@composer docker:cli -- drush -r /app/docroot sql-drop -y",
            "@composer docker:cli -- bash -c \"drush sqlc -r /app/docroot < /tmp/.data/db.sql\"",
            "@composer docker:cli -- drush -r /app/docroot en mysite_core -y",
            "@composer docker:cli -- drush -r /app/docroot cc all"
        ],
        "app:site-install": [
            "@composer docker:cli -- drush -r /app/docroot si mysite_profile -y --account-name=admin --account-pass=admin install_configure_form.enable_update_status_module=NULL install_configure_form.enable_update_status_emails=NULL",
            "@composer docker:cli -- drush cr -r /app/docroot -y"
        ],
        "app:build-fed": [
            "npm install",
            "npm run build"
        ],
        "app:build-fed-prod": "npm run build-prod",
        "app:cleanup": [
            "chmod -Rf 777 docroot/sites/default",
            "git ls-files --directory --other -i --exclude-from=.gitignore docroot|xargs rm -Rf",
            "rm -Rf vendor",
            "rm -Rf node_modules"
        ],
        "app:cleanup-full": [
            "@app:cleanup",
            "@docker:stop",
            "@docker:destroy"
        ],
        "app:build-artefact": "robo --ansi --load-from $(pwd)/vendor/integratedexperts/robo-git-artefact/RoboFile.php artefact --gitignore=.gitignore.artefact",
        "app:create-settings": "Utilities\\composer\\DrupalSettings::create",
        "app:drush": "docker exec -i $(docker-compose ps -q cli) drush -r /app/docroot",
        "docker:start": "docker-compose up -d --build",
        "docker:restart": "docker-compose restart",
        "docker:stop": "docker-compose stop",
        "docker:destroy": "docker-compose down",
        "docker:cli": "docker exec -i $(docker-compose ps -q cli)",
        "docker:pull": "docker image ls --format \"{{.Repository}}:{{.Tag}}\" | grep amazeeio | grep -v none | xargs -n1 docker pull | cat",
        "docker:logs": "docker-compose logs",
        "pre-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "pre-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "post-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles",
            "export $(cat .env | xargs) && composer app:create-settings"
        ],
        "post-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ]
    },
    "extra": {
        "enable-patching": true,
        "composer-exit-on-patch-failure": true,
        "installer-paths": {
            "docroot": [
                "type:drupal-core"
            ],
            "docroot/sites/all/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "docroot/sites/all/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "docroot/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "docroot/sites/all/libraries/{$name}": [
                "type:drupal-library"
            ],
            "docroot/sites/all/drush/{$name}": [
                "type:drupal-drush"
            ]
        },
        "preserve-paths": [
            "docroot/sites/all/modules/custom",
            "docroot/sites/all/themes/custom",
            "docroot/profiles/mysite_profile",
            "docroot/sites/all/drush",
            "docroot/sites/default/settings.php",
            "docroot/sites/default/default.settings.local.php",
            "docroot/sites/default/files",
            "docroot/robots.txt",
            "docroot/.htaccess"
        ],
        "patches": {
            "drupal/drupal": {
                "User picture is deleted after calls to user_save() - https://www.drupal.org/node/935592": "https://www.drupal.org/files/issues/935592-150.patch",
                "Administer Users permission should be separate from Administer Account Settings - https://www.drupal.org/node/366950": "https://www.drupal.org/files/issues/administer_users_-366950-196.patch",
                "No navigation links on 404 pages - https://www.drupal.org/node/233807": "https://www.drupal.org/files/issues/drupal-navigation_on_403_404-233807-92.patch"
            },
            "drupal/persistent_update": {
                "Add an ability to bypass all persistent updates - https://www.drupal.org/node/2824493": "https://www.drupal.org/files/issues/bypass-all-persistent-updates-2824493-3.patch"
            }
        }
    }
}
